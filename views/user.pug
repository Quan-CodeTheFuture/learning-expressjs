extend layouts/common.pug
block content
    h1 Users List:
    form(action="/users/search",method="GET", class="d-flex")
        input(type="text" name="q" value=nameInput class="form-control")
        button(class= "btn btn-primary ml-2") Search

    form(action="/users/create", method="GET")
        button(class="btn btn-outline-primary btn-lg ") Add
    ul
        each val,index in users
            li
                form(action="/users/"+val.id)
                    span= (index+1)+':'+val.name
                    span &nbsp;
                    button(class="btn btn-primary") view
    
